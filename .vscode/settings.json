{
    "files.exclude": { 
            "/.classpath": true, 
            "/.project": true, 
            "/.settings": true, 
            "/.factorypath": true, 
            "/.idea": true, 
            "/.metadata": true, 
            "/.vscode": true, 
            "/.svn": true
        }, 
        "search.exclude": { 
            "/idea": true, 
            "/svn": true, 
            "/node_modules": true, 
            "/bower_components": true, 
            "/env": true, "/venv": true 
        }, 
        "files.watcherExclude": { 
            "**/.git/objects/**": true,
            "**/.git/subtree-cache/**": true,
            "**/node_modules/*/**": true,
            "/.git/objects/": true, 
            "/.git/subtree-cache/": true, 
            "/node_modules/": true, 
            "/.idea/": true, 
            "/.svn/": true, 
            "/env/": true, 
            "/venv/": true, 
            "env-*": true 
        },
    
    "editor.fontFamily": "Fira Code",//后边的引号中写上要设置的字体类型，个人比较喜欢Fira Code
    "editor.fontLigatures": true,//这个控制是否启用字体连字，true启用，false不启用，这里选择启用
    "editor.fontSize": 14,//设置字体大小，这个不多说都明白
    "editor.fontWeight": "normal",
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": true, //这个设置字体粗细，可选normal,bold,"100"~"900"等，选择合适的就行
}